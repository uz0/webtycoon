.manager
  .tab(
    *ngFor='let current of site.list',
    [ngClass]="{'active':current==site.active}",
    (click)='site.setActive(current)'
  )
    | {{ current.name }}
  .tab.plus(*ngIf='!isEditing', (click)='isEditing = true')
    | +
  form.new-site(*ngIf='isEditing', (ngSubmit)='saveNewSite()')
    input.tab(
      type='text',
      [(ngModel)]='sitename',
      name='sitename',
      placeholder = 'Your site\'s name goes here'
    )
    button.tab([disabled]='!sitename') Ok

.content
  ul.sidebar
    li(
      *ngFor='let advert of filter(site.active.adverts, 5)',
      [ngClass]="{'disabled': !advert}"
    )
      | {{advert || 'empty advert'}}
  ul.mainblock
    li(
      *ngFor='let article of filter(site.active.articles, 15)',
      [ngClass]="{'disabled': !article}"
    )
      | {{article || 'empty article'}}
